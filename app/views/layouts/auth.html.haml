!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Feedbacks! | Login
    - if Rails.env.production?
      = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Open+Sans', media: 'all'
    = stylesheet_link_tag 'application', media: 'all'
    = render 'layouts/icons'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body.auth.text-xs-center
    .container
      .row
        .col-lg-4.col-md-6.col-sm-12.text-center.ml-auto.mr-auto
          = link_to image_tag('rowe-chiropractic-logo-round.png', class: :logo), '/'
          %hr
          = yield
    = javascript_include_tag 'fontawesome'
