%a.anchor{ name: testimonial.id, href: '#' }
.testimonial{ id: "testimonial-#{testimonial.id}" }
  %h4
    = testimonial.title
    %small.ml-3= link_to fa_icon('arrow-alt-to-top', class: :fa), '/pages/testimonials'
  %blockquote.blockquote
    =raw testimonial.formatted_body
    %footer.blockquote-footer= testimonial.author

