.card.auth
  %h4.card-header Registration
  .card-body
    = render 'layouts/messages'
    = simple_form_for(resource, url: registration_path(resource_name), html: { class: 'form-signin'}) do |f|
      = f.simple_fields_for :memberships do |memberships|
        = memberships.input :role, input_html: { value: 'owner' }, as: :hidden
        = memberships.simple_fields_for :account do |account|
          = account.input :name, label: false, placeholder: 'Account name', class: 'form-control'
      = f.input :email, required: true, label: false, placeholder: 'Email', class: 'form-control'
      = f.input :password, required: true, label: false, placeholder: 'Password', class: 'form-control'
      = f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm password', class: 'form-control'
      = f.submit 'Create Account', class: 'btn btn-lg btn-primary btn-block'



