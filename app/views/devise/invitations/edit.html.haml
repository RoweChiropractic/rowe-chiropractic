.card.auth
  %h2.card-header
    = t 'devise.invitations.edit.header'
  .card-body
    = simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put } do |f|
      = f.hidden_field :invitation_token

      = f.input :password, required: true, label: false, placeholder: 'Password', class: 'form-control'
      = f.input :password_confirmation, required: true, label: false, placeholder: 'Confirm password', class: 'form-control'

      = f.button :submit, t("devise.invitations.edit.submit_button"), class: 'btn btn-lg btn-primary btn-block'
