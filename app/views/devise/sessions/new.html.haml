= render 'layouts/messages'
.card.auth
  .card-body
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin'}) do |f|
      .input-group
        .input-group-prepend
          %span.input-group-text= fa_icon :user, class: 'fa'
        = f.input_field :email, label: false, placeholder: 'Email', class: 'form-control'
      .input-group
        .input-group-prepend
          %span.input-group-text= fa_icon 'lock-alt', class: 'fa'
        = f.input_field :password, label: false, placeholder: 'Password', class: 'form-control'
      = f.button :submit, t('auth.sign_in'), class: 'btn btn-primary btn-block'
      .checkbox
        %label
          %input{ type: :checkbox, value: 'remember-me' }
          Remember me

  .card-footer.text-muted
    %p
      %a{ href: new_password_path(resource_name) } Forgot password?
