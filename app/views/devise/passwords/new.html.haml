.card.auth
  %h4.card-header Reset Password
  .card-body
    %p.text-muted We'll send instructions.
    = render 'layouts/messages'
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f|
      = f.input :email, label: false, placeholder: 'Email'
      = f.button :submit, t('auth.reset_password'), class: 'btn btn-primary btn-block'
